<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivTrailer"
        android:background="@drawable/ic_no_image"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTrailerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="1234123412341234123412341234123412341234123412341234"
        app:layout_constraintTop_toBottomOf="@id/ivTrailer"/>

    <TextView
        android:id="@+id/tvTrailerSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="@dimen/_9ssp"
        android:textColor="@color/black"
        tools:text="Youtube"
        app:layout_constraintTop_toBottomOf="@id/tvTrailerName"/>
</androidx.constraintlayout.widget.ConstraintLayout>